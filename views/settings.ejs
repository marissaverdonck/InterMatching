<% include partials/head %>

  <body>
    <% include partials/header %>

      <section id="settings">
        <a href="javascript:history.back()" id="back">
          < back</a>
            <form method="post">
              <fieldset>
                <legend></legend>
                <% if (user) { %>

                  <label for="name"> First Name</label>
                  <input name="name" id="name" type="text" value="<%= user.name %>"><br />
                  <label for="dateofbirth"> Date of birth </label>
                  <input name="dateofbirth" id="dateofbirth" type="date " value="<%= user.dateofbirth %>"><br />
                  <label for="location "> Place of residence </label>
                  <input name="location" id="location" type="text" value="<%= user.location %>"><br />
                  <label for="gender" id="gender"> Gender </label>
                  <p><input id="gender" type="radio" name="gender" value="men" <% if (user.gender=="men" ) { %> checked="checked"
                    <% } %> /> Men
                      <input id="gender" type="radio" name="gender" value="women" <% if (user.gender=="women" ) { %> checked="checked"
                      <% } %> />Women</p>
                  <label for="orientation" id="orientation"> I'm looking for a </label>
                  <p><input name="orientation" id="orientation" type="checkbox" value="men" <% if (user.orientation=="men" ) { %> checked="checked"
                    <% } %>/> Men
                      <input name="orientation" id="orientation" type="checkbox" value="women" <% if (user.orientation=="women" ) { %> checked="checked"
                      <% } %>
                        /> Women</p>
                  <label for="agefrom"> minimum age</label>
                  <input name="agefrom" id="agefrom" type="number" value="<%= user.agefrom %>">
                  <label for="agetill"> maximum age</label>
                  <input name="agetill" id="agetill" type="number" value="<%= user.agetill %>"><br />
                  <input id="button" type="submit" name="submit" value="Save settings" />
              </fieldset>
            </form>
            <a href="/log-out" class="button">Log out</a>
            <a href="/delete-account" class="delete-acc-btn">Delete my account</a>
      </section>
      <% } %>
        <script type="text/javascript" src="/server.js"></script>
        <script type="text/javascript" src="script/script.js"></script>
  </body>

  </html>
